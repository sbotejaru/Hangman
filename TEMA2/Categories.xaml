<Window x:Class="TEMA2.Categories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEMA2"
        mc:Ignorable="d"
        Title="Categories" Height="150" Width="150" ResizeMode="NoResize">
    <Grid>
        <MenuItem Header="Movies" Margin="0,0,0,92" Command="{Binding SaveCategoryCommand}" CommandParameter="movies"/>
        <MenuItem Header="Animals" Margin="0,27,0,65" Command="{Binding SaveCategoryCommand}" CommandParameter="animals"/>
        <MenuItem Header="Cars" Margin="0,54,0,38" Command="{Binding SaveCategoryCommand}" CommandParameter="cars"/>
        <MenuItem Header="All" Margin="0,81,0,11" Command="{Binding SaveCategoryCommand}" CommandParameter="all"/>
        
    </Grid>
</Window>
